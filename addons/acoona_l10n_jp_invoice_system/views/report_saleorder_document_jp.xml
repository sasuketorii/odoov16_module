<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_jp" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <t t-set="company" t-value="doc.company_id"/>
                <t t-set="lines" t-value="doc.order_line.filtered(lambda l: not l.display_type)"/>
                <t t-set="tax_summary" t-value="doc._l10n_jp_tax_summary()"/>
                <t t-set="bank_info" t-value="doc._l10n_jp_bank_info()"/>

                <div class="page">
                    <h2 class="jp-invoice__legacy-title">Quotation</h2>
                    <div class="jp-invoice-page">
                    <div class="jp-invoice">
                        <div class="jp-invoice__title-bar">
                            <span>見積書</span>
                        </div>
                        <div class="row jp-invoice__header">
                            <div class="col-7 jp-invoice__header-left">
                                <div class="jp-invoice__recipient-name">
                                    <span t-esc="doc._l10n_jp_recipient_label()"/>
                                </div>
                                <div class="jp-invoice__recipient-address">
                                    <t t-set="recipient_address_lines" t-value="doc._l10n_jp_address_lines(doc.partner_id)"/>
                                    <t t-foreach="recipient_address_lines" t-as="addr_line">
                                        <div t-esc="addr_line"/>
                                    </t>
                                </div>
                                <div class="jp-invoice__opening" t-if="company.l10n_jp_invoice_opening_text">
                                    <span t-esc="company.l10n_jp_invoice_opening_text"/>
                                </div>
                                <div class="jp-invoice__amount-box">
                                    <div class="jp-invoice__amount-label">ご提案金額（税込）</div>
                                    <div class="jp-invoice__amount-value">
                                        <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </div>
                                </div>
                                <div class="jp-invoice__due" t-if="doc.validity_date">
                                    有効期限: <span class="jp-invoice__due-date" t-esc="doc._l10n_jp_format_date(doc.validity_date)"/>
                                </div>
                            </div>
                            <div class="col-5 jp-invoice__header-right">
                                <ul class="jp-invoice__meta">
                                    <li>
                                        <span class="jp-invoice__meta-label">発行日</span>
                                        <span class="jp-invoice__meta-value">
                                            <span t-esc="doc._l10n_jp_format_date(doc.date_order)"/>
                                        </span>
                                    </li>
                                    <li>
                                        <span class="jp-invoice__meta-label">見積番号</span>
                                        <span class="jp-invoice__meta-value" t-esc="doc.name"/>
                                    </li>
                                    <li t-if="doc.payment_term_id">
                                        <span class="jp-invoice__meta-label">支払条件</span>
                                        <span class="jp-invoice__meta-value" t-esc="doc.payment_term_id.name"/>
                                    </li>
                                </ul>
                                <div class="jp-invoice__company">
                                    <div class="jp-invoice__company-name" t-esc="company.name"/>
                                    <t t-set="company_address_lines" t-value="doc._l10n_jp_address_lines(company.partner_id)"/>
                                    <t t-foreach="company_address_lines" t-as="addr_line">
                                        <div t-esc="addr_line"/>
                                    </t>
                                    <div t-if="company.phone">
                                        電話: <span t-esc="company.phone"/>
                                    </div>
                                    <div t-if="company.email">
                                        メール: <span t-esc="company.email"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="jp-invoice__payment-block" t-if="bank_info">
                            <div class="jp-invoice__payment-row">
                                <div class="jp-invoice__payment-label">振込先</div>
                                <div class="jp-invoice__payment-body">
                                    <t t-foreach="bank_info.get('lines', [])" t-as="bank_line">
                                        <div t-esc="bank_line"/>
                                    </t>
                                </div>
                            </div>
                            <div class="jp-invoice__payment-row" t-if="bank_info.get('note')">
                                <div class="jp-invoice__payment-label">備考</div>
                                <div class="jp-invoice__payment-body">
                                    <span t-esc="bank_info['note']"/>
                                </div>
                            </div>
                        </div>

                        <table class="jp-invoice__lines">
                            <thead>
                                <tr>
                                    <th>内容</th>
                                    <th>数量</th>
                                    <th>単位</th>
                                    <th>単価（税抜）</th>
                                    <th>値引</th>
                                    <th>税率</th>
                                    <th>金額（税抜）</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="line">
                                    <tr t-if="line.display_type not in ('line_section', 'line_note')">
                                        <td>
                                            <span t-esc="line.display_name or line.name"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.product_uom_qty" t-options='{"widget": "float"}'/>
                                        </td>
                                        <td>
                                            <span t-esc="line.product_uom.name or ''"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="line.discount">
                                                <span t-esc="'{:.2f}%'.format(line.discount)"/>
                                            </t>
                                            <t t-else="">
                                                <span>-</span>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="doc._l10n_jp_line_tax_display(line)"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="row jp-invoice__summary-block">
                            <div class="col-6">
                                <table class="jp-invoice__tax-summary" t-if="tax_summary">
                                    <thead>
                                        <tr>
                                            <th>税率区分</th>
                                            <th>消費税</th>
                                            <th>金額（税抜）</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="tax_summary" t-as="summary">
                                            <tr>
                                                <td t-esc="summary['name']"/>
                                                <td class="text-end">
                                                    <span t-esc="summary['tax']" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                                </td>
                                                <td class="text-end">
                                                    <span t-esc="summary['base']" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="jp-invoice__totals">
                                    <tbody>
                                        <tr>
                                            <th>小計</th>
                                            <td class="text-end">
                                                <span t-field="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>消費税</th>
                                            <td class="text-end">
                                                <span t-field="doc.amount_tax" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>合計</th>
                                            <td class="text-end">
                                                <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="jp-invoice__notes" t-if="doc.note">
                            <div class="jp-invoice__notes-title">備考</div>
                            <div class="jp-invoice__notes-body">
                                <p t-field="doc.note" t-options='{"widget": "text"}'/>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
