<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 一般設定に日本固有設定を露出（会社関連のrelatedなので会社別に保存される） -->
    <record id="res_config_settings_view_form_l10n_jp_invoice_system" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.l10n.jp.invoice.system</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- 既存で確実に存在する #about セクションにボックスを追加 -->
            <xpath expr="//div[@id='about']/div[hasclass('row','mt16','o_settings_container')]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="l10n_jp_invoice_system_box">
                    <div class="o_setting_left_pane">
                        <i class="fa fa-file-text-o" role="img" aria-label="Japan Invoice" title="Japan Invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <!-- domainで参照するため不可視で配置が必要 -->
                        <field name="company_partner_id" invisible="1"/>
                        <span class="o_form_label">Japan Invoice Settings</span>
                        <div class="text-muted">日本のインボイス制度向けの追加項目</div>
                        <div class="content-group mt16">
                            <div class="mt8">
                                <label for="company_l10n_jp_registration_number" class="o_light_label"/>
                                <field name="company_l10n_jp_registration_number" placeholder="T1234567890123" class="oe_inline"/>
                            </div>
                            <div class="mt8">
                                <label for="company_l10n_jp_company_seal" class="o_light_label"/>
                                <field name="company_l10n_jp_company_seal" widget="image" options="{'size':[0,100]}"/>
                            </div>
                            <div class="mt8">
                                <label for="company_l10n_jp_show_bank_block" class="o_light_label"/>
                                <field name="company_l10n_jp_show_bank_block" class="oe_inline"/>
                                <div class="text-muted">請求書に振込先（お振込先）を表示します。</div>
                            </div>
                            <div class="mt8" attrs="{'invisible': [('company_l10n_jp_show_bank_block','=',False)]}">
                                <label for="company_l10n_jp_default_invoice_bank_id" class="o_light_label"/>
                                <!-- View側のdomainは外し、フィールド定義側のdomainを利用 -->
                                <field name="company_l10n_jp_default_invoice_bank_id" options="{'no_create_edit': False}" class="oe_inline"/>
                                <div class="text-muted">会社の銀行口座から選択。請求書側で個別に上書きできます。</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
