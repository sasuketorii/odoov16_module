<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_jp" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang, tz=o.env.context.get('tz') or o.env.user.tz or o.company_id.partner_id.tz or 'Asia/Tokyo')"/>
                <t t-set="display_name" t-value="'発注書'"/>
                <t t-set="company" t-value="o.company_id"/>
                <t t-set="lines" t-value="o.order_line"/>
                <t t-set="tax_summary" t-value="o._l10n_jp_tax_summary()"/>

                <div class="page">
                    <h2 class="jp-invoice__legacy-title" t-esc="display_name"/>
                    <div class="jp-invoice-page">
                    <div class="jp-invoice">
                        <div class="jp-invoice__title-bar">
                            <span t-esc="display_name"/>
                        </div>
                        <div class="row jp-invoice__header">
                            <div class="col-7 jp-invoice__header-left">
                                <div class="jp-invoice__recipient-name">
                                    <span t-esc="o._l10n_jp_vendor_label()"/>
                                </div>
                                <div class="jp-invoice__recipient-address">
                                    <t t-set="recipient_address_lines" t-value="o._l10n_jp_address_lines(o.partner_id)"/>
                                    <t t-foreach="recipient_address_lines" t-as="addr_line">
                                        <div t-esc="addr_line"/>
                                    </t>
                                </div>
                                <div class="jp-invoice__amount-box">
                                    <div class="jp-invoice__amount-label">ご発注金額（税込）</div>
                                    <div class="jp-invoice__amount-value">
                                        <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-5 jp-invoice__header-right">
                                <ul class="jp-invoice__meta">
                                    <li>
                                        <span class="jp-invoice__meta-label">発行日</span>
                                        <span class="jp-invoice__meta-value">
                                            <span t-esc="o._l10n_jp_format_date(o.date_order)"/>
                                        </span>
                                    </li>
                                    <li>
                                        <span class="jp-invoice__meta-label">発注番号</span>
                                        <span class="jp-invoice__meta-value" t-esc="o.name"/>
                                    </li>
                                    <li t-if="o.partner_ref">
                                        <span class="jp-invoice__meta-label">貴社参照</span>
                                        <span class="jp-invoice__meta-value" t-esc="o.partner_ref"/>
                                    </li>
                                </ul>
                                <div class="jp-invoice__company">
                                    <div class="jp-invoice__company-name" t-esc="company.name"/>
                                    <t t-set="company_address_lines" t-value="o._l10n_jp_address_lines(company.partner_id)"/>
                                    <t t-foreach="company_address_lines" t-as="addr_line">
                                        <div t-esc="addr_line"/>
                                    </t>
                                    <div t-if="company.phone">
                                        電話: <span t-esc="company.phone"/>
                                    </div>
                                    <div t-if="company.email">
                                        メール: <span t-esc="company.email"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table class="jp-invoice__lines">
                            <thead>
                                <tr>
                                    <th>内容</th>
                                    <th>予定日</th>
                                    <th>数量</th>
                                    <th>単位</th>
                                    <th>単価（税抜）</th>
                                    <th>税率</th>
                                    <th>金額（税抜）</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="line">
                                    <tr t-if="line.display_type not in ('line_section', 'line_note')">
                                        <td>
                                            <span t-esc="line.display_name or line.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="o._l10n_jp_format_datetime(line.date_planned)"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.product_qty" t-options='{"widget": "float"}'/>
                                        </td>
                                        <td>
                                            <span t-esc="line.product_uom.name or ''"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="o._l10n_jp_line_tax_display(line)"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr t-if="line.display_type == 'line_section'" class="jp-invoice__line-section">
                                        <td colspan="7">
                                            <span t-esc="line.name"/>
                                        </td>
                                    </tr>
                                    <tr t-if="line.display_type == 'line_note'" class="jp-invoice__line-note">
                                        <td colspan="7">
                                            <span t-esc="line.name"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="row jp-invoice__summary-block">
                            <div class="col-6">
                                <table class="jp-invoice__tax-summary" t-if="tax_summary">
                                    <thead>
                                        <tr>
                                            <th>税率区分</th>
                                            <th>消費税</th>
                                            <th>金額（税抜）</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="tax_summary" t-as="summary">
                                            <tr>
                                                <td t-esc="summary['name']"/>
                                                <td class="text-end">
                                                    <span t-esc="summary['tax']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                                <td class="text-end">
                                                    <span t-esc="summary['base']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="jp-invoice__totals">
                                    <tbody>
                                        <tr>
                                            <th>小計</th>
                                            <td class="text-end">
                                                <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>消費税</th>
                                            <td class="text-end">
                                                <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>合計</th>
                                            <td class="text-end">
                                                <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="jp-invoice__notes" t-if="o.notes">
                            <div class="jp-invoice__notes-title">備考</div>
                            <div class="jp-invoice__notes-body">
                                <p t-field="o.notes" t-options='{"widget": "text"}'/>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

