<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_template_jp" inherit_id="sale.sale_order_portal_template">
        <xpath expr="//div[@id='portal_sale_content']/div[@t-call='sale.sale_order_portal_content']" position="replace">
            <t>
                <t t-set="doc" t-value="sale_order.with_context(lang=sale_order.partner_id.lang)"/>
                <t t-set="report_type" t-value="'html'"/>
                <t t-call="sale.report_saleorder_document"/>
            </t>
        </xpath>
    </template>
</odoo>
