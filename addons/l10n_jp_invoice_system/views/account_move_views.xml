<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 請求書フォームに振込先のドロップダウンを追加 -->
    <record id="view_move_form_inherit_l10n_jp_invoice_bank" model="ir.ui.view">
        <field name="name">account.move.form.l10n.jp.invoice.bank</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- 汎用性を優先し、支払条件フィールドがあるグループに追加 -->
            <xpath expr="//group[.//field[@name='invoice_payment_term_id']]" position="inside">
                <!-- domain参照フィールドはビュー上に配置が必要 -->
                <field name="company_partner_id" invisible="1"/>
                <field name="l10n_jp_invoice_bank_id" options="{'no_create_edit': False}" domain="[('partner_id', '=', company_partner_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>
