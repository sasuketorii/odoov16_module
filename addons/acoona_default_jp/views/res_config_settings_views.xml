<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 一般設定ビューの継承 -->
    <record id="view_general_configuration_acoona_default_jp" model="ir.ui.view">
        <field name="name">res.config.settings.jp.default</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- 既存で確実に存在する "about" セクションに日本向け設定ボックスを追加 -->
            <xpath expr="//div[@id='about']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="acoona_default_jp_box">
                    <div class="o_setting_left_pane">
                        <i class="fa fa-flag-o" role="img" aria-label="Japanese settings" title="Japanese settings"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="acoona_default_lang"/>
                        <div class="text-muted">
                            新規ユーザーのデフォルト言語と会社のデフォルト通貨を設定します
                        </div>
                        <div class="content-group">
                            <div class="mt16 o_settings_container">
                                <div class="o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <label for="acoona_default_lang"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <field name="acoona_default_lang" class="o_light_label"/>
                                    </div>
                                </div>
                                <div class="o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <label for="acoona_default_currency_id"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <field name="acoona_default_currency_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
