<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- 一般設定: アプリストア/アップグレード誘導ブロックの非表示 -->
    <record id="acoona_branding_res_config_hide_appstore" model="ir.ui.view">
        <field name="name">res.config.settings.acoona.branding2.hide.appstore</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="priority" eval="2600"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='appstore'] | //div[@id='acoona_hide_appstore_links'] | //div[@id='acoona_hide_mobile_badges']" position="replace">
                <div class="d-none" id="acoona_hide_appstore_links"/>
            </xpath>
        </field>
    </record>
</odoo>
