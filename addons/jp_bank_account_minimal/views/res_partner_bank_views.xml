<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_partner_bank_form_min_jp" model="ir.ui.view">
    <field name="name">res.partner.bank.form.min.jp</field>
    <field name="model">res.partner.bank</field>
    <field name="inherit_id" ref="base.view_partner_bank_form"/>
    <field name="arch" type="xml">
      <!-- Replace left column content with our minimal fields and make it span both columns -->
      <field name="acc_number" position="replace">
        <group colspan="2" col="2">
          <field name="bank_id" options="{'no_create_edit': True}" domain="[('isJapanese','=',True)]" placeholder="三菱UFJ銀行"/>
          <field name="jpBranchCode" placeholder="001"/>
          <field name="jpBranchName" string="支店名（カナ）" placeholder="ｼﾝｼﾞｭｸ"/>
          <field name="jpAccountType"/>
          <field name="acc_number" modifiers="{'required': True}" placeholder="1234567"/>
          <field name="jpAccountHolderKana" modifiers="{'required': True}" placeholder="ﾔﾏﾀﾞﾀﾛｳ"/>
        </group>
      </field>

      <!-- Hide partner linkage field on the form (keeps relation but not shown) -->
      <field name="partner_id" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>

      <!-- Hide the entire right group to avoid duplication and irrelevant fields -->
      <xpath expr="//sheet/group/group[2]" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
    </field>
  </record>
</odoo> 